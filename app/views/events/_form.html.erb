<div class="w-1/3 mx-auto ">

<%= form_with(model: event, local: true) do |f| %>
  <%= render "shared/error", object: event %>

  <div class="py-2"><%= f.label :name %></div>
  <%= f.text_field :name, autofocus: true,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <div class="py-2"><%= f.label :description %></div>
  <%= f.text_area :description, rows: 5,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <div class="py-2"><%= f.label :location %></div>
  <%= f.text_field :location,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <div class="py-2"><%= f.label :price %></div>
  <%= f.number_field :price,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <div class="py-2"><%= f.label :image_link %></div>
  <%= f.text_field :image_link,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <div class="py-2"><%= f.label :capacity %></div>
  <%= f.number_field :capacity,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>


  <div class="py-2"><%= f.label :starts_at %></div>
  <%= f.datetime_select :starts_at, {ampm: true}, {class: "datetime  my-4 py-2 px-1  focus:outline:none rounded bg-gray-200 focus:bg-white focus:border-purple-500 "} %>

  

  <%= f.submit "Submit",class:"bg-purple-800 text-white font-bold text-lg px-4 py-2 my-2 mx-4  rounded-lg focus:text-white hover:bg-purple-600" %>
<% end %>
</div>