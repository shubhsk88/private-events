<div class="w-1/3 mx-auto ">

<%= form_with(model: event, local: true) do |f| %>
  <%= render "shared/error", object: event %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 5,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <%= f.label :location %>
  <%= f.text_field :location,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <%= f.label :price %>
  <%= f.number_field :price,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  %>

  <%= f.label :starts_at %>
  <%= f.datetime_select :starts_at, {ampm: true}, {class: "datetime"} %>

  

  <%= f.submit %>
<% end %>
</div>